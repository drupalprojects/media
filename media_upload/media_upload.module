      'uri' => 'file',
      'kind' => 'stream',
      'types' => '*',
      'description' => t('Format Drupal uploaded files'),
      'callbacks' => array( 
        'stream' => 'media_upload_media_user_files_select2',
       ),      
       // human readable description
